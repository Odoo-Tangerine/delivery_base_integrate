<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="delivery_base_res_config_settings_form_view" model="ir.ui.view">
        <field name="name">delivery.base.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Shipping Methods"
                     data-string="Shipping Methods"
                     name="tangerine_delivery_base"
                     groups="base.group_system"
                />
            </xpath>
        </field>
    </record>

    <record id="action_delivery_base_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="delivery_base_res_config_settings_form_view"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'tangerine_delivery_base', 'bin_size': False}</field>
    </record>
</odoo>